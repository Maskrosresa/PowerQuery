let
    // 1. Point to your MAIN data table
    Source = GDC_load,

    // 2. Point to your REPLACEMENT table
    ReplacementTable = geoCov,

    // --- No more changes needed below this line ---

    // Convert the replacement table into a list for processing
    ReplacementList = List.Buffer(Table.ToRows(ReplacementTable)),

    // Tell the query to look ONLY in the "covcountry" column
    // This is the line we changed to be specific
    ColumnsToLookIn = {"covcountry"},

    // Perform the replacements on the specified column(s)
    ReplaceValues = Table.TransformColumns(
        Source,
        List.Transform(
            ColumnsToLookIn,
            each {_,
                (textValue) => List.Accumulate(
                    ReplacementList,
                    textValue,
                    (currentText, replacementPair) => Text.Replace(currentText, replacementPair{0}, replacementPair{1})
                )
            }
        )
    )
in
    ReplaceValues
